.side-bar
  .side-bar_header
    .top-items
      .top-items__name
        = current_user.name
      .top-items__items
        = link_to '/groups/new' do
          =icon('fas','edit')
        = link_to '#' do
          =link_to edit_user_path(current_user) do
            =icon('fas','cog')
  .side-bar_group-list
    - current_user.groups.each do |group|
      .group-list
        = link_to '#' do
          .group-list__name
            = group.name
          .group-list__message
            メッセージはまだありません